<div class="d-flex justify-content-center align-items-center vh-100">
  <div class="card">
    <div class="card-header ">
      <h5>ជ្រើសរើសឯកសារ</h5>
    </div>
    <div class="card-body">
      <%= simple_form_for :call_logs, url: caller_logs_csv_path do |f| %>
